{% extends 'base.html.twig' %}

{% block title %}Profile name{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('pm_home') }}">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('pm_profile') }}">Profile</a>
        </li>
        <li class="breadcrumb-item active">Name</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success">Set Name</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
