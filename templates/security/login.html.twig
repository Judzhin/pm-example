{% extends 'outer.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <form class="card-body" method="post">

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                            {% include '_flashes.html.twig' %}

                            <h1>Login</h1>
                            <p class="text-muted">Sign In to your account</p>

                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            {% if false and app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                <input type="email" value="{{ last_username }}" name="email" placeholder="Username"
                                       id="inputEmail" class="form-control" required autofocus/>
                            </div>

                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input type="password" name="password" placeholder="Password" class="form-control"
                                       required/>
                            </div>

                            <div class="checkbox mb-3">
                                <label for="">
                                    <input type="checkbox" name="_remember_me"/> <span
                                            class="text-muted">Remember me</span>
                                </label>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <button class="btn btn-primary px-4" type="submit">Login</button>
                                </div>
                                <div class="col-6 text-right">
                                    <a href="{{ path('pm_password_reset') }}" class="btn btn-link px-0">
                                        Forgot password?
                                    </a>
                                </div>
                            </div>

                        </form>
                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>
                                <h2>Sign up</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                    incididunt ut labore et dolore magna aliqua.</p>
                                <a href="{{ path('pm_register') }}" class="btn btn-primary active mt-3">
                                    Register Now!
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
