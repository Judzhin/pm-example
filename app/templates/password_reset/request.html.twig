{% extends 'outer.html.twig' %}

{% block title %}Hello PasswordResetController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">

                    {{ form_start(passwordResetForm, {'attr': {'class': 'card-body p-4'}}) }}

                    {% include '_flashes.html.twig' %}

                    <h1>Forgot password?</h1>
                    <p class="text-muted">Enter your email address for reset</p>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@</span>
                        </div>
                        {{ form_widget(passwordResetForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(passwordResetForm.email) }}
                    </div>

                    <button class="btn btn-block btn-success" type="submit">Reset</button>
                    {{ form_end(passwordResetForm) }}

                </div>
            </div>
        </div>
    </div>

